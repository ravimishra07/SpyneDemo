<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GifDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:title="Sypne Demo"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/ivGif"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_weight="0.3" />

    <TextView
        android:id="@+id/tvGifTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:maxLines="1"
        android:text="By:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/ivGif"
        app:layout_constraintEnd_toEndOf="@+id/ivGif"
        app:layout_constraintTop_toBottomOf="@+id/ivGif" />

    <TextView
        android:id="@+id/tvGifType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:maxLines="1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/ivGif"
        app:layout_constraintTop_toBottomOf="@+id/tvGifTitle" />
    <TextView
        android:id="@+id/tvGifRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:maxLines="1"
        android:text="Rating:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/ivGif"
        app:layout_constraintTop_toBottomOf="@+id/tvGifType" />
</androidx.constraintlayout.widget.ConstraintLayout>